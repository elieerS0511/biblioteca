<odoo>
    <record id="action_library_author" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">library.author</field>  <!-- ¡Debe coincidir exactamente! -->
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista Tree (lista) -->
    <record id="view_library_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form (detalle) -->
    <record id="view_library_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="biography"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menú en la interfaz -->
    <menuitem id="menu_library_root" name="Biblioteca" sequence="10"/>
    <menuitem id="menu_library_authors" name="Autores" parent="menu_library_root" action="action_library_author"/>
</odoo>